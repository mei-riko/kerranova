html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Search

        link(href='./css/style.css', rel='stylesheet')

    body
        script(src="http://code.jquery.com/jquery-3.3.1.min.js")
        include chunks/mixin.pug
        include chunks/header.pug
        //- Information
        section.container.mt-3.mt-sm-2
            .row.align-items-end
                .col-8.col-md-10.col-sm-12
                    h1.h2.text-base Найдено по&nbsp;запросу 
                        span.text-bold "плитка для офиса" 
                .col-4.col-md-10.col-sm-12.mb-2.text-small.text-right.text-md-left
                    a.text-bold.text-underline(href="search.html") Товары (31) 
                    span.separation |
                    a.text-bold(href="search-text.html") Страницы (4)
        //- Product List
        section.container.collection.mt-2
            .content-scroll.collection__filter
                .content-group
                    span.label.label_link.content-group__item(data-filter="type") Тип товара
                    span.label.label_link.content-group__item(data-filter="sort") Сортировать
                    span.label.label_link.content-group__item(data-filter="price") Цена
                    span.label.label_link.content-group__item(data-filter="color") Цвет
                    span.label.label_link.content-group__item(data-filter="material") Тип поверхности
                    span.label.label_link.content-group__item(data-filter="size") Размер
                    span.label.label_link.label_link--active.content-group__item(data-filter="texture") Фактура
                    span.label.label_link.content-group__item(data-filter="area") Назначение                    
            .row.collection__row
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1001 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-1.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1002 CALACATTA GOLD", "Marble Trend" , "60х60, 30х60, 120х60", "от 769")(style="background-image:url('../demo/product-2.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1003 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 2 449")(style="background-image:url('../demo/product-3.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1004 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 959")(style="background-image:url('../demo/product-4.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1005 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-5.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1006 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-1.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1007 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-2.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1008 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-3.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1001 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-1.jpg');")
                .col.col-sm-6.mb-3.mb-sm-2
                    +product("K-1002 CALACATTA GOLD", "Marble Trend" , "60х60, 30х60, 120х60", "от 769")(style="background-image:url('../demo/product-2.jpg');")
            .text-center
                a.btn.btn_secondary.btn--small(href="#") Загрузить ещё
        //- Recommendation
        aside.container.mt-4.mt-md-3.mb-3.mb-md-2
            h3.content-title Не нашли то, что искали? Посмотрите нашу подборку:
            .row.mt-3
                .col-4.col-md-6.col-sm-12.mb-sm-2
                    .preview.preview_promo
                        //- p.preview__subtitle По применению
                        .preview_promo__image(style="background-image: url('../demo/collection-1.png');")
                        p.preview__title Для ванной комнаты
                        p.preview__intro Коллекции Eternа, Premium Marble и другие
                        a.link-arrow.preview_promo__link(href="collection-type.html") Узнать больше
                .col-4.col-md-6.col-sm-12.mb-sm-2
                    .preview.preview_promo
                        //- p.preview__subtitle По применению
                        .preview_promo__image(style="background-image: url('../demo/collection-3.png');")
                        p.preview__title Для гостиной
                        p.preview__intro Коллекции Eternа, Premium Marble и другие
                        a.link-arrow.preview_promo__link(href="collection-type.html") Узнать больше
                .col-4.d-md-none.col-sm-12.d-sm-block
                    .preview.preview_promo
                        //- p.preview__subtitle По применению
                        .preview_promo__image(style="background-image: url('../demo/collection-4.png');")
                        p.preview__title Для кухни
                        p.preview__intro Коллекции Eternа, Premium Marble и другие
                        a.link-arrow.preview_promo__link(href="collection-type.html") Узнать больше
        include chunks/footer.pug
        .collection-aside.collection-aside_filter(data-collection="filter")
            <button class="collection-aside__close icon-btn" aria-label="Закрыть" type="button"><svg width="24" height="24" viewBox="0 0 24 24" fill="none"><path fill-rule="evenodd" clip-rule="evenodd" d="M12 10.6L17.6 5L19 6.4L13.4 12L19 17.6L17.6 19L12 13.4L6.4 19L5 17.6L10.6 12L5 6.4L6.4 5L12 10.6Z" fill="currentColor"></path></svg></button>
            a.btn.btn_secondary.btn--small.mb-2(href="#reset") Очистить фильтр
            .toggle-item.toggle-item_filter#type
                .toggle-item__title.text-bold Тип товара
                .toggle-item__content
                    .checkbox.mb-2
                        input.checkbox__input#type1(type="checkbox" name="type")
                        label.checkbox__label(for="type1") Плитка
                    .checkbox.mb-2
                        input.checkbox__input#type2(type="checkbox" name="type")
                        label.checkbox__label(for="type2") Резка
                    .checkbox.mb-2
                        input.checkbox__input#type3(type="checkbox" name="type")
                        label.checkbox__label(for="type3") Мозаика
                    .checkbox.mb-2
                        input.checkbox__input#type4(type="checkbox" name="type")
                        label.checkbox__label(for="type4") Специальные элементы
                    .checkbox
                        input.checkbox__input#type5(type="checkbox" name="type")
                        label.checkbox__label(for="type5") Печатные
            .toggle-item.toggle-item_filter#sort
                .toggle-item__title.text-bold Сортировать
                .toggle-item__content
                    .radio.mb-2
                        input.radio__input#sort1(type="radio" name="sort")
                        label.radio__label(for="sort1") Цена: от низкой до высокой
                    .radio.mb-2
                        input.radio__input#sort2(type="radio" name="sort")
                        label.radio__label(for="sort2") Цена: от высокой до низкой
                    .radio
                        input.radio__input#sort3(type="radio" name="sort")
                        label.radio__label(for="sort3") По алфавиту: от А до Я
            .toggle-item.toggle-item_filter#price
                .toggle-item__title.text-bold Цена
                .toggle-item__content
            .toggle-item.toggle-item_filter#color
                .toggle-item__title.text-bold Цвет
                .toggle-item__content
                    .input-group
                        .radio.radio_color
                            input.radio__input#color1(type="radio" name="color" checked="checked")
                            label.radio_color__label.radio__label(for="color1" style="background-color: #1d1d1d;")
                        .radio.radio_color
                            input.radio__input#color2(type="radio" name="color")
                            label.radio_color__label.radio__label(for="color2" style="background-color: #eee;")
                        .radio.radio_color
                            input.radio__input#color3(type="radio" name="color")
                            label.radio_color__label.radio__label(for="color3" style="background-color: #eee;")
                        .radio.radio_color
                            input.radio__input#color4(type="radio" name="color")
                            label.radio_color__label.radio__label(for="color4" style="background-color: #eee;")
                        .radio.radio_color
                            input.radio__input#color5(type="radio" name="color")
                            label.radio_color__label.radio__label(for="color5" style="background-color: #eee;")
                        .radio.radio_color
                            input.radio__input#color6(type="radio" name="color")
                            label.radio_color__label.radio__label(for="color6" style="background-color: #eee;")
            .toggle-item.toggle-item_filter#material
                .toggle-item__title.text-bold Тип поверхности
                .toggle-item__content
                    .checkbox.mb-2
                        input.checkbox__input#material1(type="checkbox" name="material")
                        label.checkbox__label(for="material1") Структурированная с sugar-эффектом
                    .checkbox.mb-2
                        input.checkbox__input#material2(type="checkbox" name="material")
                        label.checkbox__label(for="material2") Матовая
                    .checkbox
                        input.checkbox__input#material3(type="checkbox" name="material")
                        label.checkbox__label(for="material3") Глянцевая
            .toggle-item.toggle-item_filter#size
                .toggle-item__title.text-bold Размер
                .toggle-item__content
                    .checkbox.mb-2
                        input.checkbox__input#size1(type="checkbox" name="size")
                        label.checkbox__label(for="size1") 60x60
                    .checkbox.mb-2
                        input.checkbox__input#size2(type="checkbox" name="size")
                        label.checkbox__label(for="size2") 120x60
                    .checkbox
                        input.checkbox__input#size3(type="checkbox" name="size")
                        label.checkbox__label(for="size3") 30x60
            .toggle-item.toggle-item_filter#texture
                .toggle-item__title.text-bold Фактура
                    span.toggle-item_filter__value Мрамор, Дерево
                .toggle-item__content
                    .checkbox.mb-2
                        input.checkbox__input#texture1(type="checkbox" name="texture" checked="checked")
                        label.checkbox__label(for="texture1") Мрамор
                    .checkbox.mb-2
                        input.checkbox__input#texture2(type="checkbox" name="texture" checked="checked")
                        label.checkbox__label(for="texture2") Дерево
                    .checkbox
                        input.checkbox__input#texture3(type="checkbox" name="texture")
                        label.checkbox__label(for="texture3") Штукатурка
            .toggle-item.toggle-item_filter#area
                .toggle-item__title.text-bold Назначение
                .toggle-item__content
                    .checkbox.mb-2
                        input.checkbox__input#area1(type="checkbox" name="area")
                        label.checkbox__label(for="area1") Ванна
                    .checkbox.mb-2
                        input.checkbox__input#area2(type="checkbox" name="area")
                        label.checkbox__label(for="area2") Гостинная
                    .checkbox
                        input.checkbox__input#area3(type="checkbox" name="area")
                        label.checkbox__label(for="area3") Офис
            a.btn.btn_action.btn--small.mt-3(href="#reset") Применить фильтр
        
        link(href='./css/jquery.fancybox.min.css', rel='stylesheet')
        script(src="./js/jquery.fancybox.min.js")

        script(src="./js/blazy.min.js")

