html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Product

        link(href='./css/style.css', rel='stylesheet')

    body
        script(src="http://code.jquery.com/jquery-3.3.1.min.js")
        include chunks/header.pug
        include chunks/mixin.pug
        .product
            .product__card
                ul.breadcrumbs.product__breadcrumbs
                    li.breadcrumbs__item
                        a.breadcrumbs__link(href="/catalog.html") Коллекции
                    li.breadcrumbs__item
                        a.breadcrumbs__link(href="/collection.html") Marble Trend
                    li.breadcrumbs__item.breadcrumbs__item--active Текстовая страница
                .row
                    .col-4
                        p Слайдер
                    .col-4
                        .product__intro
                            h1.product__title K-1000 CARRARA
                            form.form
                                p.product__offer Marble Trend K-1000/LR/600x600x10
                                p.product__label Цвет: 
                                    span.product__prop PULPIS / Пульпис
                                .form__group
                                    .input-group
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color1(type="radio" name="color" checked="checked")
                                            label.radio__label(for="color1")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color2(type="radio" name="color")
                                            label.radio__label(for="color2")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color3(type="radio" name="color")
                                            label.radio__label(for="color3")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color4(type="radio" name="color")
                                            label.radio__label(for="color4")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color5(type="radio" name="color")
                                            label.radio__label(for="color5")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color6(type="radio" name="color")
                                            label.radio__label(for="color6")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color7(type="radio" name="color")
                                            label.radio__label(for="color7")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color8(type="radio" name="color")
                                            label.radio__label(for="color8")
                                        .radio.radio_color
                                            input.radio_color__input.radio__input#color9(type="radio" name="color")
                                            label.radio__label(for="color9")
                                p.product__label Размер: 
                                .form__group
                                    .input-group
                                        .radio.radio_size
                                            input.radio__input#size1(type="radio" name="size" checked="checked")
                                            label.radio__label(for="size1") 60x60
                                        .radio.radio_size
                                            input.radio__input#size2(type="radio" name="size")
                                            label.radio__label(for="size2") 30x60
                                        .radio.radio_size
                                            input.radio__input#size3(type="radio" name="size")
                                            label.radio__label(for="size3") 120x60
                                p.product__label Тип поверхности: 
                                    span.tooltip-info(data-toggle="tooltip" data-placement="top" title="Tooltip on top")
                                select#material.input.input_select-product(name="")
                                    option(value="type1") Структурированная с sugar-эффектом
                                    option(value="type2") Матовая
                                    option(value="type3") Глянцевая
                    .col-4
                        .product__infornation
                        .product__sidebar
                .product__content.product__content--close
                    .row
                        .col-4
                        .col-4
                        .col-4
                    a.btn.btn_secondary#openContent(href="javascript;") Подробнее о товаре
