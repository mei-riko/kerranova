                    .checkbox.mb-2
                        input.checkbox__input#brand1(type="checkbox" name="brand")
                        label.checkbox__label(for="brand1") Kerranova
                    .checkbox.mb-2
                        input.checkbox__input#brand2(type="checkbox" name="brand")
                        label.checkbox__label(for="brand2") Grasaro
            .toggle-item.toggle-item_filter#material
                .toggle-item__title.text-bold Тип поверхности
                .toggle-item__content
                    .checkbox.mb-2
                        input.checkbox__input#material1(type="checkbox" name="material")
