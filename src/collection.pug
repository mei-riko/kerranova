    //- Slider
    .container.collection
        //- Information
        .row.mt-3.mb-2
            .col-7.mb-2
                .slider.slider_content
                    a.slider_content__item.slider_content__item--collection(href="collection.html" style="background-image: url('../demo/demo.jpg');")
                    a.slider_content__item.slider_content__item--collection(href="collection.html" style="background-image: url('../demo/photo.png');")
            .col-5.mb-2
                h1.collection__title Marble Trend
                p.collection__intro Ванная — это одновременно и личное, и общее пространство. Наши решения для хранения облегчат утренние сборы всем членам семьи. У нас есть для этого шкафы, стеллажи и полки, причем в разных стилях и разных размеров.
        //- Product List
        .content-scroll.collection__filter
            .content-group
                span.label.label_link.content-group__item(data-filter="type") Тип товара
                span.label.label_link.content-group__item(data-filter="price") Цена
                span.label.label_link.content-group__item(data-filter="color") Цвет
                span.label.label_link.content-group__item(data-filter="material") Тип поверхности
                span.label.label_link.content-group__item(data-filter="size") Размер
                span.label.label_link.label_link--active.content-group__item(data-filter="texture") Фактура
                span.label.label_link.content-group__item(data-filter="area") Назначение                    
