                .col-3.col-lg-4.col-sm-6.mb-2
                    .preview.preview_portfolio(data-fancybox="project" data-src="../demo/pic-2.webp" style="background-image: url('../demo/pic-2.webp');")
                .col-3.col-lg-4.col-sm-6.mb-2
                    .preview.preview_portfolio(data-fancybox="project" data-src="../demo/pic-3.webp" style="background-image: url('../demo/pic-3.webp');")
