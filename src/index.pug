html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Index Page

        link(href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet")
        link(href='./css/style.css', rel='stylesheet')
    body
        script(src="http://code.jquery.com/jquery-3.3.1.min.js")
        include chunks/header.pug
        include chunks/mixin.pug
        //- Slider
        .container
            .row.content-row.mt-3
                .col.content-row__slider.mb-2
                    .slider.slider_index
                        a.slider_index__item(href="collection.html" style="background-image: url('../demo/demo.jpg');")
                            .slider_index__content 
                                .slider_index__text Красота и&nbsp;комфорт в&nbsp;вашей гостиной
                                <svg class="slider_index__arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" baseProfile="full" width="24" height="24" viewBox="0 0 24.00 24.00" enable-background="new 0 0 24.00 24.00" xml:space="preserve">
                                    <path fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 4,12L 16.25,12L 11,6.74994L 11.6643,6L 18.1642,12.5L 11.6642,19L 11,18.25L 16.25,13L 4,13L 4,12 Z "/>
                                </svg>
                        a.slider_index__item(href="collection.html" style="background-image: url('../demo/photo.png');")
                            .slider_index__content 
                                .slider_index__text Руководство по&nbsp;обустройству вашего дома
                                <svg class="slider_index__arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" baseProfile="full" width="24" height="24" viewBox="0 0 24.00 24.00" enable-background="new 0 0 24.00 24.00" xml:space="preserve">
                                    <path fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 4,12L 16.25,12L 11,6.74994L 11.6643,6L 18.1642,12.5L 11.6642,19L 11,18.25L 16.25,13L 4,13L 4,12 Z "/>
                                </svg>
                .col.content-row__promo.mb-2
                    .preview.preview_promo.content-row__promo-inside
                        p.preview__subtitle Новая коллекция
                        p.preview__title.preview_promo__title Central Park
                        .preview_promo__image(style="background-image: url('../demo/photo.png');")
                        p.preview__intro Размеры плитки: 80x160, 80x80, 60x120, 60x60, 120x278 см
                        a.link-arrow.preview_promo__link(href="collection.html") Посмотреть коллекцию
        //- Popular Collection
        .container.pb-3.line.line_after
            h2.h3.mb-2.content-title Самые популярные коллекции
            .slider.slider_preview.slider_collection.row
                .col-3.mb-2
                    +collection("Marble Trend", "Размеры плитки: 80x160, 80x80, 60x120, 60x60, 120x278 см")(src="../demo/collection-1.png")
                .col-3.mb-2
                    +collection("Premium Marble", "Размеры плитки: 80x160, 80x80, 60x120 см")(src="../demo/collection-2.png")
                .col-3.mb-2
                    +collection("Terrazzo", "Размеры плитки: 80x160, 80x80, 60x120, 60x60, 120x278 см")(src="../demo/collection-3.png")
                .col-3.mb-2
                    +collection("Montana", "Размеры плитки: 80x160, 80x80, 60x120, 120x120 см")(src="../demo/collection-4.png")
                .col-3.mb-2
                    +collection("Premium Marble", "Размеры плитки: 80x160, 80x80, 60x120 см")(src="../demo/collection-2.png")
                .col-3.mb-2
                    +collection("Terrazzo", "Размеры плитки: 80x160, 80x80, 60x120, 60x60, 120x278 см")(src="../demo/collection-3.png")
                .col-3.mb-2
                    +collection("Montana", "Размеры плитки: 80x160, 80x80, 60x120, 120x120 см")(src="../demo/collection-4.png")
        //- Popular Product
        .container.mt-4
            h3.content-title Идеально для ванной комнаты
            .slider.slider_preview.slider_product.row
                .col.slider_product__col.mb-2
                    +product("K-1001 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-1.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1002 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 769")(style="background-image:url('../demo/product-2.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1003 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 2 449")(style="background-image:url('../demo/product-3.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1004 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 959")(style="background-image:url('../demo/product-4.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1005 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-5.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1006 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-1.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1007 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-2.jpg');")
                .col.slider_product__col.mb-2
                    +product("K-1008 CARRARA", "Marble Trend" , "60х60, 30х60, 120х60", "от 1 419")(style="background-image:url('../demo/product-3.jpg');")
        //- Sale banner
        .content-banner
            .container
                a.content-banner__img(href="text.html" title="" style="background-image: url('../demo/banner.png');")
        //- Popular Solution
        .container.pb-3.line.line_after
            h3.mb-2.content-title Решения для обеденной зоны
            .slider.slider_preview.slider_collection.row
                .col-3.mb-2
                    +collection-simple("Дизайн-проект с плиткой из коллекции «Marble Trend»")(src="../demo/collection-1.png")
                .col-3.mb-2
                    +collection-simple("«Black&White»: идеальное решение для работы и отдыха")(src="../demo/collection-2.png")
                .col-3.mb-2
                    +collection-simple("Особенная практичность")(src="../demo/collection-3.png")
                .col-3.mb-2
                    +collection-simple("Ярко и стильно — это просто с плиткой «Montana»")(src="../demo/collection-4.png")
                .col-3.mb-2
                    +collection-simple("Дизайн-проект с плиткой из коллекции «Marble Trend»")(src="../demo/collection-2.png")
                .col-3.mb-2
                    +collection-simple("Идеальное решение")(src="../demo/collection-3.png")
                .col-3.mb-2
                    +collection-simple("Ярко и стильно — это просто с плиткой")(src="../demo/collection-4.png")
