        //- Slider
        .container
            .row.content-row.mt-3.mb-0.mb-md-2
                .col.content-row__slider.mb-2
                    .slider.slider_content
                        a.slider_content__item(href="collection.html" style="background-image: url('../demo/demo.jpg');")
